{
  "name": "crown-scraper-service",
  "version": "1.0.0",
  "description": "Crown data scraper service with WebSocket push",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "stop": "[ -f crown-scraper.pid ] && kill $(cat crown-scraper.pid) || echo 'No PID file found'",
    "restart": "npm run stop && sleep 2 && npm start",
    "status": "[ -f crown-scraper.pid ] && ps -p $(cat crown-scraper.pid) || echo 'Service not running'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop crown-scraper",
    "pm2:restart": "pm2 restart crown-scraper",
    "pm2:logs": "pm2 logs crown-scraper"
  },
  "keywords": [
    "crown",
    "scraper",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.6",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "https-proxy-agent": "^7.0.6",
    "ioredis": "^5.3.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "socks-proxy-agent": "^8.0.5",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.9.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.8",
    "@types/xml2js": "^0.4.14",
    "playwright": "^1.56.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
